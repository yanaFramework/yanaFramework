<?xml version="1.0" ?>
<!DOCTYPE database SYSTEM "dtd/database.dtd">
<database>
    <table name="ft">
        <primarykey>ftid</primarykey>
        <declaration>
            <integer
                name="ftid"
                notnull="yes"
            />
            <integer
                name="ftvalue">
                <default>0</default>
            </integer>
            <array
                name="array"
            />
        </declaration>
    </table>
    <table name="t">
        <primarykey>tid</primarykey>
        <foreign table="ft">
            <key name="ftid"/>
        </foreign>
        <declaration>
            <string
                name="tid"
                length="32"
                notnull="yes"
            />
            <integer
                name="tvalue">
                <default>0</default>
            </integer>
            <array
                name="ta"
            />
            <bool
                name="tb"
            />
            <float
                name="tf"
                unsigned="yes"
            />
            <integer
                name="ti"
                length="4"
                unsigned="yes"
                fixed="yes"
            />
            <reference
                name="ftid"
                notnull="yes"
                column="ftid"
                label="ftid"
            />
        </declaration>
        <index name="Index1" unique="yes" clustered="yes">
            <column name="tid"/>
        </index>
        <index name="Index2">
            <column name="tvalue"/>
        </index>
    </table>
    <table name="i">
        <primarykey>iid</primarykey>
        <foreign table="t">
            <key name="iid" column="tid"/>
        </foreign>
        <declaration>
            <string
                name="iid"
                length="32"
                notnull="yes"
            />
            <array
                name="ta"
            />
        </declaration>
    </table>
    <table name="test">
        <primarykey>id</primarykey>
        <declaration>
            <integer name="id" autoincrement="yes"/>
            <string name="value"/>
        </declaration>
    </table>
    <table name="u">
        <primarykey>uid</primarykey>
        <declaration>
            <string
                name="uid"
                length="32"
                notnull="yes"
            />
        </declaration>
    </table>
    <view name="v" checkoption="local" tables="t" readonly="no">
        <field table="t" column="tid" alias="id"/>
        <field table="t" column="tvalue" alias="val"/>
        <select dbms="mysql">SELECT t.tid as id, t.tvalue as val FROM t</select>
    </view>
</database>
