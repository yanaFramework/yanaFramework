<?xml version="1.0" ?>
<!DOCTYPE database SYSTEM "../dtd/database.dtd">
<database>
    <table name="sequences">
		<primarykey>name</primarykey>
		<declaration>
			<string name="name" length="255"/>
			<integer name="value"/>
			<integer name="increment">
				<default>1</default>
			</integer>
			<integer name="min"/>
			<integer name="max"/>
			<bool name="cycle"/>
		</declaration>
	</table>
	<table name="counter">
		<primarykey>name</primarykey>
		<foreign table="sequences">
            <key name="name"/>
		</foreign>
		<declaration>
			<string name="name" length="255"/>
			<string name="info" length="1024"/>
			<bool name="useip">
				<default>true</default>
			</bool>
			<array name="ip"/>
		</declaration>
	</table>
</database>
